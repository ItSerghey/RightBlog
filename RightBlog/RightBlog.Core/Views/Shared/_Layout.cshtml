<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootsrap/bootstrap.css">
        <link rel="stylesheet" href="~/css/site.css">
    </environment>
   
</head>
<body style="background-color: #565353;">
    @*<div class="container">*@
    <nav class="navbar fixed-top  navbar-expand-lg navbar-dark bg-dark">
        <img class="logo" src="~/images/itserghey-logo.png" />
        <a class="navbar-brand" href="/">it.sergHEY</a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse " id="navbarNav">
            <ul class="navbar-nav mx-auto">
                <li class="nav-item">
                    @{ @using RightBlog.Core.Extensions;
                    @using System.ComponentModel.DataAnnotations;
                    var a = TypeArticle.Life.GetDisplayName();


                    }
                    <a class="nav-link" href="#">@Html.Label(TypeArticle.Life.GetDisplayName(), TypeArticle.GamblingAddiction.GetAttribute<DisplayAttribute>().GetName(), new { htmlAttributes = new { @class = "form-control" } })</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Гемификация</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">365</a>
                </li>
            </ul>
        </div>

    </nav>
    @*</div>*@

    <div class="container body-content laoyoutpadding">
        <div class="row">
            <div class="col-md-8">        @RenderBody()</div>
            <div class="col-md-4">     <h1>right side</h1></div>
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/popper/popper.js"></script>
        <script src="~/lib/bootsrap/bootstrap.js"></script>
    </environment>

    @RenderSection("scripts", required: false)
</body>
</html>
